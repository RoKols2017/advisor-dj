# Django Settings
DEBUG=0
SECRET_KEY=change-me-to-a-secure-random-key
# Пример: только домены/IP сервера (CIDR не поддерживается)
# Нельзя: ALLOWED_HOSTS=10.85.1.0/24
ALLOWED_HOSTS=printadvisor.local,10.85.1.75,localhost,127.0.0.1
# Для production добавьте корректные origin с https://
# CSRF_TRUSTED_ORIGINS=https://printadvisor.local,https://10.85.1.75,https://localhost

# Database
DATABASE_URL=postgres://advisor:advisor@db:5432/advisor
POSTGRES_DB=advisor
POSTGRES_USER=advisor
POSTGRES_PASSWORD=advisor
POSTGRES_PORT=5432

# Logging
LOG_TO_FILE=1
LOG_TO_CONSOLE=0
LOG_DIR=/app/logs
LOG_FILE_NAME=project.log
WATCHER_LOG_FILE_NAME=print_events_watcher.log

# File Processing
PRINT_EVENTS_WATCH_DIR=/app/data/watch
PRINT_EVENTS_PROCESSED_DIR=/app/data/processed
PRINT_EVENTS_QUARANTINE_DIR=/app/data/quarantine

# Security
IMPORT_TOKEN=change-me-to-a-secure-token
ENABLE_WINDOWS_AUTH=0

# Docker Ports
WEB_PORT=8000

# Production Security (uncomment for production)
# SECURE_SSL_REDIRECT=1
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=1
# SECURE_HSTS_PRELOAD=1
# SECURE_CONTENT_TYPE_NOSNIFF=1
# SECURE_BROWSER_XSS_FILTER=1
# SESSION_COOKIE_SECURE=1
# CSRF_COOKIE_SECURE=1
